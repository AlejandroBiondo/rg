{% extends 'main.twig' %}

{% block title %}{{ 'Login'|trans }}{% endblock title %}

{% block content %}
<div class="container">
  {% include 'top_bar.twig' %}
  <h1>{{ 'Login'|trans }}</h1>
  <form method="post">
    <input type="text" name="username" placeholder="{{ 'Username'|trans }}">
    <input type="password" name="password" placeholder="{{ 'Password'|trans }}">
    <input type="submit" name="login" value="{{ 'Login'|trans }}">
  </form>
</div>
{% endblock content %}

{% block scripts %}
{% endblock scripts %}