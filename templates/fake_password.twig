<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, shrink-to-fit=no, user-scalable=no">
    <title>Retro Games | Good Old Downloads</title>
    <style>
        @font-face {
          font-family: 'Press Start 2P';
          font-style: normal;
          font-weight: 400;
          src: url('/static/fonts/press-start-2p-v6-latin-regular.eot'); /* IE9 Compat Modes */
          src: local('Press Start 2P Regular'), local('PressStart2P-Regular'),
               url('/static/fonts/press-start-2p-v6-latin-regular.eot?#iefix') format('embedded-opentype'), /* IE6-IE8 */
               url('/static/fonts/press-start-2p-v6-latin-regular.woff2') format('woff2'), /* Super Modern Browsers */
               url('/static/fonts/press-start-2p-v6-latin-regular.woff') format('woff'), /* Modern Browsers */
               url('/static/fonts/press-start-2p-v6-latin-regular.ttf') format('truetype'), /* Safari, Android, iOS */
               url('/static/fonts/press-start-2p-v6-latin-regular.svg#PressStart2P') format('svg'); /* Legacy iOS */
        }
        * {
          box-sizing: border-box;
        }
        body, html {
          margin: 0;
          padding: 0;
          height: 100%;
          background: #FFFDF1;
          color: #22b14c;
          font-family: 'Press Start 2P', sans-serif;
        }
        #count-wrap {
          display: flex;
          align-items: center;
          justify-content: center;
          font-size: 16px;
          width: 100%;
          height: 100%;
          padding: 15px;
        }
        #soon-tee-em {

        }
        #soon-tee-em > span {
          display: inline-block;
        }
    </style>
</head>
<body>
  <div id="count-wrap"><div id="soon-tee-em">Soon&trade;</div></div>
  <script>
    var rlsDate = 1541257200*1000; // 11/03/2018, 3:00pm (UTC)
    var pluralize = function(int, str){
      if (int > 1 || int === 0) {
        return str+'s';
      }
      return str;
    }

    var timer = setInterval(function(){
      var html = '';
      var now = new Date().getTime();
      var remain = parseInt(rlsDate - now);
      var days = parseInt(remain / 86400000);
      remain = (remain % 86400000);
      if (days !== 0) {
        html += `<span>${days} ${pluralize(days, 'day')},</span>`;
      }

      var hours = parseInt(remain / 3600000);
      remain = (remain % 3600000);
      if (hours !== 0) {
        html += ` <span>${hours} ${pluralize(hours, 'hour')},</span>`;
      }

      var minutes = parseInt(remain / 60000);
      remain = (remain % 60000);
      if (minutes !== 0) {
        html += ` <span>${minutes} ${pluralize(minutes, 'minute')},</span>`;
      }

      var seconds = parseInt(remain / 1000);
      remain = (remain % 1000);
      html += ` <span>${seconds} ${pluralize(seconds, 'second')}</span>`;

      if ((days + hours + minutes + seconds) <= 0) {
        clearInterval(timer);
        window.location.href = '/';
      }

      document.getElementById('soon-tee-em').innerHTML = html;
    }, 1000);
  </script>
</body>
</html>