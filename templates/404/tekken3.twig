<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, shrink-to-fit=no, user-scalable=no">
    <title>404 - K.O.</title>
    <style>
    /* 
        RESET ALL THE THINGS
    */
    * { box-sizing: border-box;
        user-select: none;
        -moz-user-select: none;
        -webkit-user-select: none;
        margin: 0;
        padding: 0;
        border: 0;
        font-size: 100%;
        font: inherit;
        vertical-align: baseline;
    }
    html, body {
        position: relative;
        width: 100%;
        height: 100%;
        overflow: hidden;
    }
    #youlose, #continue {
        image-rendering: optimizeSpeed;
        image-rendering: -moz-crisp-edges;
        image-rendering: -o-crisp-edges;
        image-rendering: -webkit-optimize-contrast;
        image-rendering: -o-pixelated;
        image-rendering: pixelated;
        image-rendering: optimize-contrast;
        -ms-interpolation-mode: nearest-neighbor;
    }
    #youlose {
        position: fixed;
        bottom: 10%;
        left: 50%;
        -webkit-transform: translateX(-50%);
            -ms-transform: translateX(-50%);
                transform: translateX(-50%);
        width: 247px;
        height: 38px;
        visibility: hidden;
        background: url(/static/img/404/tekken3/wordsheet.png) no-repeat;
        background-position: 0 -152px;
        -webkit-animation: toggleVisible 4s 1 steps(1) forwards;
                animation: toggleVisible 4s 1 steps(1) forwards; /* stay for 3 seconds, wait 4 seconds for K.O. to go away */
        -webkit-transform-origin: 0;
            -ms-transform-origin: 0;
                transform-origin: 0;
    }
    #continue {
        display: block;
        position: relative;
        overflow: visible;
        text-decoration: none;
        outline : none;
        border: 0;
        top: 50%;
        left: 50%;
        -webkit-transform: translate(-50%, -50%);
            -ms-transform: translate(-50%, -50%);
                transform: translate(-50%, -50%);
        -webkit-transform-origin: 0;
            -ms-transform-origin: 0;
                transform-origin: 0;
        width: 83px;
        height: 38px;
        background: url(/static/img/404/tekken3/wordsheet.png) no-repeat;
        animation: continue 3s 1 steps(1) forwards 4s, toggleVisible 0s 1 steps(1) reverse forwards 17s;
        pointer-events: none;
    }
    #continue:after {
        display: block;
        visibility: hidden;
        content: '';
        position: absolute;
        right: 0px;
        width: 22px;
        height: inherit;
        background: url(/static/img/404/tekken3/wordsheet.png) no-repeat;
        animation: countDown 10s 1 steps(1) reverse forwards 7s, gameOver 0s 1 steps(1) forwards 17s;
    }
    @-webkit-keyframes continue {
        from {
            visibility: hidden;
            width: 83px;
        } to {
            visibility: visible;
            width: 240px;
            background-position: 0 -38px;
            pointer-events: auto;
        }
    }
    @keyframes continue {
        from {
            visibility: hidden;
            width: 83px;
        } to {
            visibility: visible;
            width: 240px;
            background-position: 0 -38px;
            pointer-events: auto;
        }
    }
    @-webkit-keyframes gameOver {
        from {
            width: 22px;
        } to {
            background-position: 0 -114px;
            width: 302px;
            left: 50%;
            -webkit-transform: translateX(-50%);
                    transform: translateX(-50%);
            pointer-events: none;
        }
    }
    @keyframes gameOver {
        from {
            width: 22px;
        } to {
            background-position: 0 -114px;
            width: 302px;
            left: 50%;
            -webkit-transform: translateX(-50%);
                    transform: translateX(-50%);
            pointer-events: none;
        }
    }
    @-webkit-keyframes countDown {
        0% {
            visibility: visible;
            background-position: 0 -76px;
        }
        11.1111111111% {
            background-position: -22px -76px;
        }
        22.2222222222% {
            background-position: -44px -76px;
        }
        33.3333333333% {
            background-position: -66px -76px;
        }
        44.4444444444% {
            background-position: -88px -76px;
        }
        55.5555555555% {
            background-position: -110px -76px;
        }
        66.6666666666% {
            background-position: -132px -76px;
        }
        77.7777777777% {
            background-position: -154px -76px;
        }
        88.8888888888% {
            background-position: -176px -76px;
        }
        99.9999999999% {
            background-position: -198px -76px;
        }
    }
    @keyframes countDown {
        0% {
            visibility: visible;
            background-position: 0 -76px;
        }
        11.1111111111% {
            background-position: -22px -76px;
        }
        22.2222222222% {
            background-position: -44px -76px;
        }
        33.3333333333% {
            background-position: -66px -76px;
        }
        44.4444444444% {
            background-position: -88px -76px;
        }
        55.5555555555% {
            background-position: -110px -76px;
        }
        66.6666666666% {
            background-position: -132px -76px;
        }
        77.7777777777% {
            background-position: -154px -76px;
        }
        88.8888888888% {
            background-position: -176px -76px;
        }
        99.9999999999% {
            background-position: -198px -76px;
        }
    }
    @-webkit-keyframes toggleVisible {
        from {
            visibility: hidden;
        } to {
            visibility: visible;
        }
    }
    @keyframes toggleVisible {
        from {
            visibility: hidden;
        } to {
            visibility: visible;
        }
    }
    /* Scale for the big screens */
    @media (min-width: 576px) {
        #continue {
            -webkit-transform: scale(1.48) translate(-50%, -50%);
                -ms-transform: scale(1.48) translate(-50%, -50%);
                    transform: scale(1.48) translate(-50%, -50%);
        }
        #youlose {
            -webkit-transform: scale(1.48) translateX(-50%);
                -ms-transform: scale(1.48) translateX(-50%);
                    transform: scale(1.48) translateX(-50%);
        }
    }
    #video-tekken3 {
        /* must not use display: none; or opacity or visibility cause some browsers won't autoplay the video */
        position: absolute;
        bottom: -500px;
        right: -500px;
        z-index: -99999;
    }
    </style>
</head>
<body>
    <a href="/" id="continue"></a>
    <div id="youlose"></div>
    <iframe id="video-tekken3" width="5" height="5" src="https://www.youtube.com/embed/FZUsmRWK4tI?enablejsapi=1" frameborder="0" allow="autoplay; encrypted-media"></iframe>
    <script>
        var audio = document.getElementById('video-tekken3');
        audio.addEventListener('load', function() {
            this.contentWindow.postMessage('{"event":"command","func":"setPlaybackQuality","args":["small"]}', "*");
            this.contentWindow.postMessage('{"event":"command","func":"seekTo","args":["4.1",true]}', "*");
            this.contentWindow.postMessage('{"event":"command","func":"playVideo"}', "*");
            this.contentWindow.postMessage('{"event":"command","func":"unMute"}', "*");
            this.contentWindow.postMessage('{"event":"command","func":"setVolume","args":["100"]}', "*");
        });
    </script>
</body>
</html>